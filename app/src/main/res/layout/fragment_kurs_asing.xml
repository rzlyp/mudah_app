<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#eef1ee"
    android:orientation="vertical"
    tools:context="me.bayupaoh.mudah.Fragment.KursAsingFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/text">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Bank"
        android:textStyle="bold"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/safebox"/>
        <Spinner
            android:id="@+id/spnBank"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/btnKurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#27ae60"
        android:textColor="@color/text"
        android:text="Cek Kurs Mata Asing"/>
</LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutHasil"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bank"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/status"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:gravity="center_vertical"
                        android:text="Online"
                        android:textColor="#000"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/txtNamaBank"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="BNI"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/change"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:gravity="center_vertical"
                        android:text="Mata Uang"
                        android:textColor="#000"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/txtMataUang"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="BNI"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hand_holding_money_bills"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Harga Beli"
                        android:textColor="#000"
                        android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtHargaBeli"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="RP. 20000"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/people_trading"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Harga Jual"
                        android:textColor="#000"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/txtHargaJual"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="RP. 20000"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
