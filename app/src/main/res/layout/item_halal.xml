<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/txt_namaproduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indomie"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="20dp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Produsen"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/txt_namaprodusen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Produsen"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/business_card"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="No. Sertifikasi"
                android:textSize="15dp"
                android:textColor="#999696"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/txt_idperusahaan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Nama Produsen"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Masa Berlaku"
                android:textSize="15dp"
                android:textColor="#999696"
                android:gravity="center_vertical"
                />
        <TextView
            android:id="@+id/tgl_kadaluarsa"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Nama Produsen"
            android:textSize="15dp"
            android:textColor="#000"
            android:gravity="center_vertical"
            />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>